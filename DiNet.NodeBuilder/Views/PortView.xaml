<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiNet.NodeBuilder.Views.PortView"
             xmlns:vm="clr-namespace:DiNet.NodeBuilder.ViewModels"
             x:DataType="vm:PortViewModel">

    <Ellipse x:Name="Port" Stroke="DarkOliveGreen" Fill="OliveDrab" StrokeThickness="3">
        <Ellipse.GestureRecognizers>
            <PointerGestureRecognizer PointerPressed="PointerGestureRecognizer_PointerPressed" PointerReleased="PointerGestureRecognizer_PointerReleased"/>
        </Ellipse.GestureRecognizers>
    </Ellipse>
</ContentView>
